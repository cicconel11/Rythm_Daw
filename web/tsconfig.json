{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@rythm/ui-kit": ["../ui-kit/dist/index.js"],
      "@rythm/ui-kit/*": ["../ui-kit/dist/*"],
      "@lib/*": [
        "./lib/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "typeRoots": ["types", "node_modules/@types"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "@emotion/react"
  },
  "include": ["pages/**/*.tsx", "src/**/*.tsx", "src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/__tests__/**/*",
    "**/*.stories.tsx"
  ]
}
