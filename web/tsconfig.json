{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@ui-kit/*": ["../lovable-src/ui-kit/src/*"],
      "@lib/*": ["./lib/*"],
      "@/*": ["./src/*"]
    },
    "typeRoots": ["types", "node_modules/@types"],
    "jsx": "preserve",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "@emotion/react"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/shims.d.ts",
    "../shared/**/*.ts",
    "../shared/**/*.tsx",
    "../lovable-src/ui-kit/src/**/*.ts",
    "../lovable-src/ui-kit/src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
