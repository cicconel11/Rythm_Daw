{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@app/*": ["src/*"],
      "@test/*": ["test/*"],
      "@prisma/*": ["src/prisma/*"],
      "@auth/*": ["src/auth/*"],
      "@common/*": ["src/common/*"],
      "@modules/*": ["src/modules/*"],
      "@modules/chat/*": ["src/modules/chat/*"],
      "@modules/presence/*": ["src/modules/presence/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "prisma/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
