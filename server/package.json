{
  "name": "rhythm-server",
  "version": "0.1.0",
  "description": "RHYTHM Collaboration Suite Server",
  "ts-node": {
    "ignore": [
      "test",
      "**/*.spec.ts"
    ]
  },
  "main": "dist/src/main.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "pnpm clean && tsc -p tsconfig.build.json && cp -r src/public dist/ 2>/dev/null || :",
    "dev": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
    "start": "node dist/src/main.js",
    "start:dev": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register --inspect-brk src/main.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/src/main.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=test jest --config=jest.config.js",
    "test:watch": "cross-env NODE_ENV=test jest --config=jest.config.js --watch",
    "test:cov": "cross-env NODE_ENV=test jest --config=jest.config.js --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config=jest.config.js --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json",
    "test:ws": "cross-env NODE_ENV=test jest --config=jest.config.js test/ws.spec.ts --testEnvironment=node --testTimeout=30000 --detectOpenHandles --forceExit",
    "seed": "node prisma/seed.js"
  },
  "prisma": {
    "seed": "node prisma/seed-minimal.js"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.1.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/platform-socket.io": "^11.1.3",
    "@nestjs/platform-ws": "^11.1.3",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.3",
    "@types/bcryptjs": "^3.0.0",
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.1.0",
    "jsonwebtoken": "^9.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "rate-limiter-flexible": "^2.4.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.19",
    "zod": "^3.25.75"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.0.0",
    "@nestjs/testing": "^11.1.3",
    "@prisma/client": "^5.22.0",
    "@types/aws-sdk": "^2.7.4",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.8",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/qs": "^6.14.0",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^3.0.0",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "socket.io-client": "^4.8.1",
    "source-map-support": "^0.5.20",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "webpack": "^5.99.0",
    "webpack-node-externals": "^3.0.0",
    "ws": "^8.18.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ]
  }
}
