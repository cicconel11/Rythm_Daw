{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/__mocks__/**",
    "test/**/*"
  ]
}
