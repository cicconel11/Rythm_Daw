{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.spec.ts",
    "test/**/*",
    "node_modules",
    "prisma"
  ]
}
