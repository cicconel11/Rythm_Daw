{
  "baseUrl": ".",
  "paths": {
    "@shared/*": [
      "../../shared/*"
    ]
  },
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "..",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "prisma/**/*.ts",
    "../../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}