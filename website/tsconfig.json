{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ui-kit/*": [
        "../ui-kit/src/*"
      ],
      "@ui-dev/*": [
        "../ui-dev/src/*"
      ],
      "@lovable/*": [
        "../lovable-src/src/*"
      ],
      "@shared/*": [
        "../shared/*"
      ],
      "@shared/lib/*": [
        "../shared/lib/*"
      ]
    },
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "jsx": "preserve",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/shims.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}