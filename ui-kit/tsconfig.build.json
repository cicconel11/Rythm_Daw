{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "types": ["node"],
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "paths": {
            "@shared/*": ["../shared/*"],
            "@shared/lib/*": ["../shared/lib/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.stories.*", "../shared/**/*"]
}