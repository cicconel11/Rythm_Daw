{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "rootDir": "../",
        "skipLibCheck": true,
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "module": "Node16",
        "paths": {
            "@shared/*": [
                "../shared/*"
            ],
            "@shared/lib/*": [
                "../shared/lib/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../shared/**/*"
    ]
}