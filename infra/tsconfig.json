{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": [
        "bin/**/*.ts",
        "lib/**/*.ts"
    ]
}